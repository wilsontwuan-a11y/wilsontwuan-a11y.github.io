const yearEl = document.getElementById("year");
yearEl.textContent = new Date().getFullYear();

const grid = document.getElementById("projectsGrid");
const searchEl = document.getElementById("search");

let projects = [];

function safeText(s) {
  return String(s ?? "");
}

function render(list) {
  grid.innerHTML = "";

  if (!list.length) {
    grid.innerHTML = `<div class="card"><h4>No projects found</h4><p class="muted">Try a different search.</p></div>`;
    return;
  }

  for (const p of list) {
    const title = safeText(p.title);
    const course = safeText(p.course);
    const date = safeText(p.date);
    const summary = safeText(p.summary);

    const tags = Array.isArray(p.tags) ? p.tags : [];
    const links = Array.isArray(p.links) ? p.links : [];

    const tagHtml = tags.map(t => `<span class="tag">${safeText(t)}</span>`).join("");
    const linksHtml = links
      .map(l => `<a href="${safeText(l.url)}" target="_blank" rel="noreferrer">${safeText(l.label)}</a>`)
      .join("");

    const el = document.createElement("article");
    el.className = "card";
    el.innerHTML = `
      <h4>${title}</h4>
      <p class="muted small">${course}${course && date ? " • " : ""}${date}</p>
      <p class="muted">${summary}</p>
      <div class="meta">${tagHtml}</div>
      <div class="links">${linksHtml}</div>
    `;
    grid.appendChild(el);
  }
}

async function init() {
  try {
    const res = await fetch("projects.json", { cache: "no-store" });
    projects = await res.json();
    render(projects);
  } catch (e) {
    grid.innerHTML = `<div class="card"><h4>Couldn’t load projects.json</h4><p class="muted small">Make sure it exists and is valid JSON.</p></div>`;
  }
}

searchEl.addEventListener("input", () => {
  const q = searchEl.value.trim().toLowerCase();
  if (!q) return render(projects);

  const filtered = projects.filter(p => {
    const hay = [
      p.title, p.course, p.date, p.summary,
      ...(Array.isArray(p.tags) ? p.tags : [])
    ].join(" ").toLowerCase();
    return hay.includes(q);
  });

  render(filtered);
});

init();
